<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Secrets</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container secret-card">
      <div>
        <img src="/images/middle_earth.jpg" class="small-img" alt="Middle Earth" />
        <h1>Welcome <%= user.username %></h1>
        <p class="muted">Email: <%= user.email %></p>
        <p style="margin-top:8px"><a class="btn btn-ghost" href="/logout">Logout</a></p>
      </div>

      <section>
        <h2>Share a secret</h2>
        <form class="secret-form" action="/submit-secret" method="post">
          <input id="secret" name="secret" placeholder="Write something..." required />
          <button class="btn btn-primary" type="submit">Save</button>
        </form>
      </section>

      <section>
        <h2 style="margin-top:14px">Your secrets</h2>
        <% if (user.secrets && user.secrets.length) { %>
          <div class="secret-list">
            <% user.secrets.forEach(function(s){ %>
              <div class="secret-item"><%= s %></div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="muted">No secrets yet.</p>
        <% } %>
      </section>
    </div>
  </body>
</html>
