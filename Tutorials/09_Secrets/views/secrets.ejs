<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12 text-center">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">Secrets</h1>
      <p class="lead">Shared anonymously by other users</p>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if (usersWithSecrets && usersWithSecrets.length > 0) { %>
        <% usersWithSecrets.forEach(function(user) { %>
          <div class="card mb-3">
            <div class="card-body">
              <p class="card-text"><%= user.secret %></p>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="alert alert-info">No secrets have been shared yet.</div>
      <% } %>

      <div class="text-center mt-4">
        <a class="btn btn-light mr-2" href="/logout" role="button">Log Out</a>
        <a class="btn btn-dark" href="/submit" role="button">Submit a Secret</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
